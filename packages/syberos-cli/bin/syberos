#! /usr/bin/env node

const program = require('commander')
const { getPkgVersion } = require('../dist/util')

program
  .version(getPkgVersion())
  .usage('<command> [options]')
  .command('init [projectName]', '创建默认项目')
  // .command('create [type]', '')
  .command('build', 'Build a project with options')
  .command('update', 'Update packages of syberos')
  // .command('info', 'Diagnostics Syber env info')
  .command('doctor', 'Diagnose syberos project')
  .command('simulator', 'Start the simulator')
  .parse(process.argv)
